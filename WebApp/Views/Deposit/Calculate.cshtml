@model WebApp.Models.CalculationViewModel

@{
    ViewData["Title"] = "Calculate Interest";
}

<h2>@ViewData["Title"] for @Model.Deposit.Name</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form asp-action="Calculate" method="post">
    <div class="form-group">
        <label>Amount (@Model.Deposit.Currency)</label>
        <input asp-for="Amount" class="form-control" step="0.01" />
    </div>
    <div class="form-group">
        <label>Term (months)</label>
        <input asp-for="TermMonths" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (Model.Result != null)
{
    <h3 class="mt-4">Results</h3>
    <table class="table">
        <tr><th>Gross Interest</th><td>@Model.Result.GrossInterest</td></tr>
        <tr><th>Tax</th><td>@Model.Result.TaxAmount</td></tr>
        <tr><th>Net Interest</th><td>@Model.Result.NetInterest</td></tr>
        <tr><th>Total Payable</th><td>@Model.Result.TotalPayable</td></tr>
    </table>
}
