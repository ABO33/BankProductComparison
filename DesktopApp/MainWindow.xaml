<Window x:Class="DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Deposit Entry" Height="450" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="Name:" Grid.Row="0" />
        <TextBox x:Name="txtName" Grid.Row="0" Margin="100,0,0,5" />

        <Label Content="Bank Name:" Grid.Row="1" />
        <TextBox x:Name="txtBank" Grid.Row="1" Margin="100,0,0,5" />

        <Label Content="Currency:" Grid.Row="2" />
        <TextBox x:Name="txtCurrency" Grid.Row="2" Margin="100,0,0,5" />

        <Label Content="Min Amount:" Grid.Row="3" />
        <TextBox x:Name="txtMinAmount" Grid.Row="3" Margin="100,0,0,5" />

        <Label Content="Max Amount:" Grid.Row="4" />
        <TextBox x:Name="txtMaxAmount" Grid.Row="4" Margin="100,0,0,5" />

        <Label Content="Min Term (months):" Grid.Row="5" />
        <TextBox x:Name="txtMinTerm" Grid.Row="5" Margin="100,0,0,5" />

        <Label Content="Max Term (months):" Grid.Row="6" />
        <TextBox x:Name="txtMaxTerm" Grid.Row="6" Margin="100,0,0,5" />

        <Label Content="Interest Rate %:" Grid.Row="7" />
        <TextBox x:Name="txtInterestRate" Grid.Row="7" Margin="100,0,0,5" />

        <Label Content="Tax Rate %:" Grid.Row="8" />
        <TextBox x:Name="txtTaxRate" Grid.Row="8" Margin="100,0,0,5" />

        <Button Content="Save" Grid.Row="9" HorizontalAlignment="Right" Width="80" Margin="0,10,0,0" Click="Save_Click" />
    </Grid>
</Window>